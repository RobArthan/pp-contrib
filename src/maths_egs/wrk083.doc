fun Ûbasic_continuity_tacÝ (thms : THM list) : TACTIC = (
		TRY (conv_tac (LEFT_C È_expand_conv))
	THEN	TRY (unpair_rewrite_tac thms)
	THEN	conv_tac (LEFT_C ¯_morphism_conv)	
	THEN REPEAT (
		(TRY o bc_tac) continuity_rule_thms
	THEN	(TRY o FIRST o map ¶_tac) [¬O‰R®, ¬O‰R ¸‰T O‰R®]
	THEN	REPEAT strip_tac
	THEN	(TRY o rewrite_tac) continuity_axiom_thms)
);

